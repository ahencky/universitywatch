<h1>I'm the arson template</h1>

<div id="chart">
  <p>I'm in the chart div</p>
 </div>
<script>
  var chart = c3.generate({
      bindto: '#chart',
      data: {
        columns: [
          ['2013', <%= @top_arson_stats %>]
        ],
        types: {
                2013: 'bar'
              },
        colors: {
                    2011: '#003058',
                    2012: '#00DDD8',
                    2013: '#517398'
                }
      },
      axis: {
              x: {
                  type: 'category',
                  categories:
                  ['<%= @top_arson_schools[0] %>',
                   '<%= @top_arson_schools[1] %>',
                   '<%= @top_arson_schools[2] %>',
                   '<%= @top_arson_schools[3] %>',
                   '<%= @top_arson_schools[4] %>',
                   '<%= @top_arson_schools[5] %>',
                   '<%= @top_arson_schools[6] %>',
                   '<%= @top_arson_schools[7] %>',
                   '<%= @top_arson_schools[8] %>',
                   '<%= @top_arson_schools[9] %>',]}
            },
  });

</script>

