
<div class="container">

  <div class="banner-panel row">
    <div class="col-lg-1 col-md-1 circle acronym-section">
      <div class="rotating-circle">
      <h4><%= @school.acronym %></h4>
      </div>
    </div>
    <div class="col-lg-1 col-md-1"></div>
    <div class="col-lg-5 col-md-5">
      <h2><%= @school.name %></h2>
      <div class="col-lg-6 col-md-6">
        <p>Location</p>
        <p><%= @school.city %>, <%= @school.state %></p>
        <br>
        <p>School Population</p>
        <p><%= @school.population %></p>
      </div>
      <div class="col-lg-6 col-md-6">
        <p>Type</p>
        <p><%= @school.school_type %></p>

        <br>

        <p>Tweet This Page</p>
        <p>
          <a href="https://twitter.com/share" class="twitter-share-button" data-count="none">
            Tweet
          </a>
        </p>
      </div>
    </div>

    <div class="col-lg-5 col-md-5 crime-badges">
      <div class="row">
        <h3>Total Crimes per Year</h3>
      </div>
      <div class="row">
        <div class="col-md-6 col-md-offset-3 badge-13"><span class="crime-total-number">17</span></div>
      </div>
      <div class="row">
        <div class="col-md-3 col-md-offset-3 badge-11"><span class="crime-total-number">17</span></div>
        <div class="col-md-3 badge-12"><span class="crime-total-number">17</span></div>
      </div>
    </div>

  </div> <!-- End Row Div -->

  <div class="row">
    <div class="col-lg-12 col-md-12">
      <h1>STACKED BAR CHART</h1>
